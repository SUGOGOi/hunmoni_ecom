enum BrandStatus {
    ACTIVE
    INACTIVE
}

model Brand {
    id          String      @id @default(uuid())
    name        String      @unique
    description String
    status      BrandStatus @default(ACTIVE)
    logoKey     String
    logoUrl     String
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    products    Product[] // not include in table's column
}
